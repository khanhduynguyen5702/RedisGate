{
  "dashboard": {
    "title": "RedisGate - Production Monitoring",
    "tags": ["redisgate", "redis", "api-gateway"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "title": "Request Rate (req/s)",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{path}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Requests/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 2,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_request_errors_total[5m])",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Errors/sec" },
          { "format": "short" }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": { "type": "gt", "params": [10] },
              "query": { "params": ["A", "5m", "now"] }
            }
          ]
        }
      },
      {
        "id": 3,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "title": "Request Latency (P50, P95, P99)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Latency" },
          { "format": "short" }
        ]
      },
      {
        "id": 4,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "title": "Redis Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "redis_connections_active",
            "legendFormat": "Active Connections",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Connections" },
          { "format": "short" }
        ]
      },
      {
        "id": 5,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "title": "Redis Command Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(redis_commands_total[5m])",
            "legendFormat": "{{command}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "ops", "label": "Commands/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 6,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "title": "Redis Command Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(redis_command_duration_seconds_bucket[5m]))",
            "legendFormat": "{{command}} P95",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Latency" },
          { "format": "short" }
        ]
      },
      {
        "id": 7,
        "gridPos": { "h": 6, "w": 6, "x": 0, "y": 24 },
        "title": "Total Instances",
        "type": "singlestat",
        "targets": [
          {
            "expr": "redis_instances_total",
            "refId": "A"
          }
        ],
        "format": "none",
        "prefix": "",
        "postfix": "",
        "valueName": "current"
      },
      {
        "id": 8,
        "gridPos": { "h": 6, "w": 6, "x": 6, "y": 24 },
        "title": "Total Organizations",
        "type": "singlestat",
        "targets": [
          {
            "expr": "organizations_total",
            "refId": "A"
          }
        ],
        "format": "none",
        "valueName": "current"
      },
      {
        "id": 9,
        "gridPos": { "h": 6, "w": 6, "x": 12, "y": 24 },
        "title": "Total Users",
        "type": "singlestat",
        "targets": [
          {
            "expr": "users_total",
            "refId": "A"
          }
        ],
        "format": "none",
        "valueName": "current"
      },
      {
        "id": 10,
        "gridPos": { "h": 6, "w": 6, "x": 18, "y": 24 },
        "title": "API Key Auth Failures",
        "type": "singlestat",
        "targets": [
          {
            "expr": "rate(api_key_auth_failures_total[5m])",
            "refId": "A"
          }
        ],
        "format": "short",
        "valueName": "current",
        "colorBackground": true,
        "thresholds": "1,5"
      },
      {
        "id": 11,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 30 },
        "title": "Database Query Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(database_queries_total[5m])",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "qps", "label": "Queries/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 12,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 30 },
        "title": "Database Query Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(database_query_duration_seconds_bucket[5m]))",
            "legendFormat": "{{type}} P95",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Latency" },
          { "format": "short" }
        ]
      }
    ],
    "refresh": "10s",
    "schemaVersion": 16,
    "version": 1
  }
}

