<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RedisGate - Redis as a Service</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #0f172a;
            color: #e2e8f0;
            padding: 2rem;
        }
        .container { max-width: 1400px; margin: 0 auto; }
        h1 { margin-bottom: 2rem; color: #38bdf8; font-size: 2rem; }
        h2 { color: #e2e8f0; margin-bottom: 1rem; font-size: 1.5rem; }
        h3 { color: #94a3b8; margin-bottom: 0.5rem; font-size: 1.1rem; }
        .card {
            background: #1e293b;
            border-radius: 8px;
            padding: 2rem;
            margin-bottom: 1rem;
            border: 1px solid #334155;
        }
        .form-group { margin-bottom: 1rem; }
        label {
            display: block;
            margin-bottom: 0.5rem;
            color: #94a3b8;
            font-weight: 500;
        }
        input, select, textarea {
            width: 100%;
            padding: 0.75rem;
            background: #0f172a;
            border: 1px solid #334155;
            border-radius: 4px;
            color: #e2e8f0;
            font-family: 'Courier New', monospace;
        }
        textarea {
            min-height: 100px;
            resize: vertical;
        }
        button {
            background: #38bdf8;
            color: #0f172a;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: 600;
            margin-right: 0.5rem;
        }
        button:hover { background: #0ea5e9; }
        button.secondary {
            background: #334155;
            color: #e2e8f0;
        }
        button.secondary:hover { background: #475569; }
        button.danger {
            background: #ef4444;
            color: white;
        }
        button.danger:hover { background: #dc2626; }
        .success { color: #22c55e; }
        .error { color: #ef4444; }
        .info { color: #38bdf8; }
        .warning { color: #f59e0b; }
        .tabs {
            display: flex;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }
        .tab {
            padding: 0.5rem 1rem;
            background: #334155;
            border: none;
            border-radius: 4px 4px 0 0;
            cursor: pointer;
            color: #94a3b8;
        }
        .tab.active {
            background: #1e293b;
            color: #38bdf8;
        }
        .instance-card {
            background: #0f172a;
            padding: 1.5rem;
            margin-bottom: 1rem;
            border-radius: 8px;
            border: 1px solid #334155;
        }
        .instance-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }
        .instance-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: #38bdf8;
        }
        .instance-status {
            display: inline-block;
            padding: 0.25rem 0.75rem;
            border-radius: 4px;
            font-size: 0.875rem;
            font-weight: 600;
        }
        .status-active {
            background: #065f46;
            color: #6ee7b7;
        }
        .status-simulation {
            background: #713f12;
            color: #fcd34d;
        }
        .instance-info {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin: 1rem 0;
        }
        .info-item {
            background: #1e293b;
            padding: 0.75rem;
            border-radius: 4px;
        }
        .info-label {
            color: #94a3b8;
            font-size: 0.875rem;
            margin-bottom: 0.25rem;
        }
        .info-value {
            color: #e2e8f0;
            font-weight: 600;
            font-family: 'Courier New', monospace;
        }
        .instance-actions {
            display: flex;
            gap: 0.5rem;
            margin-top: 1rem;
        }
        .redis-tester {
            background: #1e293b;
            padding: 1rem;
            border-radius: 4px;
            margin-top: 1rem;
        }
        .command-output {
            background: #0f172a;
            padding: 1rem;
            border-radius: 4px;
            font-family: 'Courier New', monospace;
            font-size: 0.875rem;
            margin-top: 0.5rem;
            white-space: pre-wrap;
            word-break: break-all;
        }
        .grid-2 {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        }
        @media (max-width: 768px) {
            .grid-2 { grid-template-columns: 1fr; }
            .instance-info { grid-template-columns: 1fr; }
        }
    </style>
</head>
<body>
<div class="container">
    <h1>üöÄ RedisGate Admin</h1>

    <!-- Auth Section -->
    <div class="card" id="authSection">
        <div class="tabs">
            <button class="tab active" onclick="switchTab('login')">Login</button>
            <button class="tab" onclick="switchTab('signup')">Sign Up</button>
        </div>

        <!-- Login Tab -->
        <div id="loginTab">
            <h2>Login</h2>
            <div class="form-group">
                <label>Email:</label>
                <input type="email" id="loginEmail" value="demo@redisgate.dev">
            </div>
            <div class="form-group">
                <label>Password:</label>
                <input type="password" id="loginPassword" value="Demo123456!">
            </div>
            <button onclick="login()">Login</button>
            <p id="loginStatus"></p>
        </div>

        <!-- Signup Tab -->
        <div id="signupTab" style="display: none;">
            <h2>Sign Up</h2>
            <div class="form-group">
                <label>Email:</label>
                <input type="email" id="signupEmail" value="demo@redisgate.dev">
            </div>
            <div class="form-group">
                <label>Username:</label>
                <input type="text" id="signupUsername" value="demouser">
            </div>
            <div class="form-group">
                <label>First Name:</label>
                <input type="text" id="signupFirstName" value="Demo">
            </div>
            <div class="form-group">
                <label>Last Name:</label>
                <input type="text" id="signupLastName" value="User">
            </div>
            <div class="form-group">
                <label>Password:</label>
                <input type="password" id="signupPassword" value="Demo123456!">
            </div>
            <button onclick="signup()">Sign Up</button>
            <p id="signupStatus"></p>
        </div>
    </div>

    <!-- Create Instance Section -->
    <div class="card" id="createSection" style="display: none;">
        <h2>Create Redis Instance</h2>
        <div class="form-group">
            <label>Name:</label>
            <input type="text" id="name" placeholder="My Redis Instance">
        </div>
        <div class="form-group">
            <label>Memory Limit:</label>
            <select id="memory">
                <option>256Mi</option>
                <option selected>512Mi</option>
                <option>1Gi</option>
                <option>2Gi</option>
            </select>
        </div>
        <div class="form-group">
            <label>Redis Version:</label>
            <select id="version">
                <option>6.2</option>
                <option selected>7.0</option>
                <option>7.2</option>
            </select>
        </div>
        <button onclick="createInstance()">Create Instance</button>
        <button class="secondary" onclick="logout()">Logout</button>
        <p id="createStatus"></p>
    </div>

    <!-- Instances List -->
    <div class="card" id="listSection" style="display: none;">
        <h2>Your Redis Instances</h2>
        <div id="instances"></div>
        <button onclick="loadInstances()">Refresh</button>
    </div>
</div>

<script>
    const API_BASE = window.location.origin;
    let token = null;
    let orgId = null;

    function switchTab(tab) {
        if (tab === 'login') {
            document.getElementById('loginTab').style.display = 'block';
            document.getElementById('signupTab').style.display = 'none';
            document.querySelectorAll('.tab')[0].classList.add('active');
            document.querySelectorAll('.tab')[1].classList.remove('active');
        } else {
            document.getElementById('loginTab').style.display = 'none';
            document.getElementById('signupTab').style.display = 'block';
            document.querySelectorAll('.tab')[0].classList.remove('active');
            document.querySelectorAll('.tab')[1].classList.add('active');
        }
    }

    async function signup() {
        const email = document.getElementById('signupEmail').value;
        const username = document.getElementById('signupUsername').value;
        const firstName = document.getElementById('signupFirstName').value;
        const lastName = document.getElementById('signupLastName').value;
        const password = document.getElementById('signupPassword').value;
        const status = document.getElementById('signupStatus');

        status.textContent = 'Creating account...';
        status.className = 'info';

        try {
            const res = await fetch(`${API_BASE}/auth/register`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    email,
                    username,
                    first_name: firstName,
                    last_name: lastName,
                    password
                })
            });

            const data = await res.json();

            if (res.ok) {
                status.className = 'success';
                status.textContent = '‚úì Account created! Switching to login...';

                // Auto-fill login form
                document.getElementById('loginEmail').value = email;
                document.getElementById('loginPassword').value = password;

                // Switch to login tab
                setTimeout(() => {
                    switchTab('login');
                    document.getElementById('signupStatus').textContent = '';
                }, 2000);
            } else {
                status.className = 'error';
                status.textContent = `‚úó ${data.message || 'Signup failed'}`;
            }
        } catch (err) {
            status.className = 'error';
            status.textContent = '‚úó Error: ' + err.message;
        }
    }

    async function login() {
        const email = document.getElementById('loginEmail').value;
        const password = document.getElementById('loginPassword').value;
        const status = document.getElementById('loginStatus');

        status.textContent = 'Logging in...';
        status.className = 'info';

        try {
            const res = await fetch(`${API_BASE}/auth/login`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ email, password })
            });

            const data = await res.json();
            console.log('Login response:', data);

            if (res.ok && data.success && data.data) {
                // Unwrap token from ApiResponse wrapper
                token = data.data.token;
                console.log('Token extracted:', token ? token.substring(0, 30) + '...' : 'none');

                status.className = 'success';
                status.textContent = '‚úì Logged in! Loading organizations...';

                // Get or create org
                await setupOrganization();

                document.getElementById('authSection').style.display = 'none';
                document.getElementById('createSection').style.display = 'block';
                document.getElementById('listSection').style.display = 'block';

                loadInstances();
            } else {
                status.className = 'error';
                status.textContent = `‚úó ${data.message || 'Login failed'}`;
            }
        } catch (err) {
            status.className = 'error';
            status.textContent = '‚úó Error: ' + err.message;
        }
    }

    async function setupOrganization() {
        try {
            // Try to get existing orgs
            const res = await fetch(`${API_BASE}/api/organizations`, {
                headers: { 'Authorization': `Bearer ${token}` }
            });

            const data = await res.json();
            console.log('Orgs response:', data);

            // Unwrap ApiResponse - data could be array or paginated object
            let orgs = [];
            if (data.success && data.data) {
                // Check if it's paginated (has 'data' field) or direct array
                orgs = Array.isArray(data.data) ? data.data : (data.data.data || []);
            }

            if (orgs.length > 0) {
                orgId = orgs[0].id;
                console.log('Using existing org:', orgs[0].name, 'ID:', orgId);
            } else {
                // Create new org
                const createRes = await fetch(`${API_BASE}/api/organizations`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify({
                        name: 'Demo Organization',
                        slug: 'demo-org-' + Date.now(),
                        description: 'Demo organization'
                    })
                });

                const orgData = await createRes.json();
                console.log('Create org response:', orgData);

                // Unwrap ApiResponse for created org
                if (orgData.success && orgData.data) {
                    orgId = orgData.data.id;
                    console.log('Created new org:', orgData.data.name, 'ID:', orgId);
                } else {
                    throw new Error('Failed to create organization: ' + (orgData.message || 'Unknown error'));
                }
            }
        } catch (err) {
            console.error('Error setting up organization:', err);
            alert('Failed to setup organization: ' + err.message);
        }
    }

    async function createInstance() {
        const name = document.getElementById('name').value;
        const memory = document.getElementById('memory').value;
        const version = document.getElementById('version').value;
        const status = document.getElementById('createStatus');

        if (!name) {
            status.className = 'error';
            status.textContent = '‚úó Name is required';
            return;
        }

        if (!orgId) {
            status.className = 'error';
            status.textContent = '‚úó Organization not set. Please logout and login again.';
            return;
        }

        status.textContent = 'Creating instance...';
        status.className = 'info';

        // Convert memory string to bytes
        const memoryBytes = {
            '256Mi': 256 * 1024 * 1024,
            '512Mi': 512 * 1024 * 1024,
            '1Gi': 1024 * 1024 * 1024,
            '2Gi': 2 * 1024 * 1024 * 1024
        }[memory] || 512 * 1024 * 1024;

        const slug = name.toLowerCase()
            .replace(/[^a-z0-9]+/g, '-')
            .replace(/^-+|-+$/g, '')
            .substring(0, 50) + '-' + Date.now().toString().substring(-6);

        const payload = {
            name: name,
            slug: slug,
            organization_id: orgId,
            max_memory: memoryBytes,
            redis_version: version,
            persistence_enabled: true,
            backup_enabled: false
        };

        console.log('Creating instance with payload:', payload);

        try {
            const res = await fetch(`${API_BASE}/api/organizations/${orgId}/redis-instances`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${token}`
                },
                body: JSON.stringify(payload)
            });

            const data = await res.json();
            console.log('Create instance response:', data);

            if (res.ok && data.success) {
                status.className = 'success';
                status.textContent = '‚úì Instance created!';
                document.getElementById('name').value = '';
                loadInstances();
            } else {
                status.className = 'error';
                status.textContent = `‚úó ${data.message || 'Failed to create instance'}`;
                console.error('Create failed:', data);
            }
        } catch (err) {
            status.className = 'error';
            status.textContent = '‚úó Error: ' + err.message;
            console.error('Create error:', err);
        }
    }

    async function loadInstances() {
        try {
            const res = await fetch(`${API_BASE}/api/organizations/${orgId}/redis-instances`, {
                headers: { 'Authorization': `Bearer ${token}` }
            });

            const data = await res.json();
            console.log('Load instances response:', data);

            // Unwrap ApiResponse
            let instances = [];
            if (data.success && data.data) {
                // Could be array or paginated object
                instances = Array.isArray(data.data) ? data.data : (data.data.data || []);
            }

            const container = document.getElementById('instances');
            if (instances.length === 0) {
                container.innerHTML = '<p class="info">No instances yet. Create one above!</p>';
            } else {
                container.innerHTML = instances.map(inst => `
                    <div class="instance">
                        <div>
                            <strong>${inst.name}</strong>
                            <br>
                            <small>Memory: ${inst.memory_limit || 'N/A'} | Version: ${inst.redis_version || 'N/A'}</small>
                        </div>
                        <div>
                            <span class="success">‚óè ${inst.status || 'Active'}</span>
                        </div>
                    </div>
                `).join('');
            }
        } catch (err) {
            console.error('Error loading instances:', err);
            document.getElementById('instances').innerHTML = '<p class="error">Failed to load instances: ' + err.message + '</p>';
        }
    }

    function logout() {
        token = null;
        orgId = null;
        document.getElementById('authSection').style.display = 'block';
        document.getElementById('createSection').style.display = 'none';
        document.getElementById('listSection').style.display = 'none';
    }
</script>
</body>
</html>
