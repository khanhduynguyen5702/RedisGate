# RedisGate Environment Configuration Example
# Copy this file to .env.development for local development

# Database Configuration
DATABASE_URL=postgresql://redisgate_dev:redisgate_dev_password@localhost:5432/redisgate_dev

# JWT Secret (change this in production!)
JWT_SECRET=your-secret-key-here-change-this-in-production

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=3000
SERVER_ADDR=127.0.0.1:3000

# Logging Configuration
# Options: trace, debug, info, warn, error
RUST_LOG=info,redisgate=debug,tower_http=debug,axum=debug

# Redis Configuration (if using external Redis)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_SECOND=100

# Metrics
METRICS_ENABLED=true

# Environment
RUST_ENV=development

